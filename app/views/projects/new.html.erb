<h1>New Project</h1>
<%= form_with scope: :project, model: @project, url: projects_path, local: true do |form| %>
	<% if @project.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@project.errors.count, "error") %> prohibited
				this project from being created:
			</h2>
			<ul>
				<% @project.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>
		<%= form.label :name %><br>
		<%= form.text_field :name %>
	</p>

	<p>
		<%= form.label :description %><br>
		<%= form.text_area :description %>
	</p>

	<label for='project_tasks'>Add Task</label>
	<select id='project_tasks' name='project[tasks]'>
		<% @tasks.each do |task| %>
			<option><%= task.name %></option>
		<% end %>
	</select>

	<p>
		<%= form.submit %>
	</p>
<% end %>
