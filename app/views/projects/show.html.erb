<form>
	<div class="form-group row">
		<label class="col-sm-2 col-form-label">Name:</label>
		<div class="col-sm-3">
			<label class="col-sm-2 col-form-label"><%= @project.name %></label>
		</div>
	</div>
	<div class="form-group row">
		<label class="col-sm-2 col-form-label">Description:</label>
		<div class="col-sm-9">
			<label class="col-sm-2 col-form-label"><%= @project.description %></label>
		</div>
	</div>
	<div class="form-group row">
		<label class="col-sm-2 col-form-label">Tasks:</label>
		<% @project.tasks.each do |task| %>
			<p><%= link_to task.name, task_path(task) %></p>
		<% end %>
	</div>

	<br>
	<br>

	<a href="<%= edit_project_path(@project) %>" type="button" class="btn btn-success">Edit</a>
	<button type="button" data-toggle="modal" data-target="#deleteModal" class="btn btn-danger">Delete</button>

	<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteCheckTitle" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="deleteCheckTitle">ATTENTION</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					Are you sure you want to delete this project?
				</div>
				<div class="modal-footer">
					<a rel="nofollow" data-method="delete" href="<%= project_path(@project) %>" class="btn btn-success">Yes</a>
					<button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
				</div>
			</div>
		</div>
	</div>
</form>
