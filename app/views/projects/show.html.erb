<p>
	<strong>Name:</strong>
	<%= @project.name %>
</p>

<p>
	<strong>Description:</strong>
	<%= @project.description %>
</p>

<h2>Tasks</h2>
<% @project.tasks.each do |task| %>
	<p>
		<strong>Name:</strong>
		<%= task.name %>
	</p>

	<p>
		<strong>Description:</strong>
		<%= task.description %>
	</p>

	<p>
		<strong>Priority:</strong>
		<%= task.priority %>
	</p>

	<p>
		<strong>Done:</strong>
		<%= task.done %>
	</p>

	<td><%= link_to 'Edit', edit_task_path(task) %></td>
	<td><%= link_to 'Delete', task_path(task),
		method: :delete,
		data: {confirm: 'Are you sure?'} %>
	</td>
<% end %>

<td><%= link_to 'Add task', new_project_task_url(@project) %></td>

<td><%= link_to 'Edit', edit_project_path(@project) %></td>
<td><%= link_to 'Delete', project_path(@project),
	method: :delete,
	data: {confirm: 'Are you sure?'} %></td>
