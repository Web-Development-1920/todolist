<h1>New Task</h1>
<%= form_with scope: :task, url: tasks_path, local: true do |form| %>
	<p>
	  <%= form.label :name %><br>
	  <%= form.text_field :name %>
	</p>
   
	<p>
	  <%= form.label :description %><br>
	  <%= form.text_area :description %>
	</p>

	<p>
	  <%= form.label :deadline %><br>
	  <input type='datetime-local' name='task[deadline]' id='task_deadline'>
	</p>

	<p>
	  <%= form.label :priority %><br>
	  <%= form.select(:priority, options_for_select([['High', 1], ['Normal', 2], ['Low', 3]])) %>
	</p>
   
	<p>
	  <%= form.submit %>
	</p>
<% end %>