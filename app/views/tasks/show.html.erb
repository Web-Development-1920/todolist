<form>
	<br> <br>
	<div class="form-group row">
		<label class="col-sm-2 col-form-label">Name:</label>
		<div class="col-sm-3">
			<label class="col-sm col-form-label"><%= @task.name %></label>
		</div>
	</div>
	<div class="form-group row">
		<label class="col-sm-2 col-form-label">Description:</label>
		<div class="col-sm-9">
			<label class="col-sm col-form-label"><%= @task.description %></label>
		</div>
	</div>
	<div class="form-group row">
		<label class="col-sm-2 col-form-label">Priority:</label>
		<div class="col-sm-3">
			<label class="col-sm col-form-label"><%= priority_select(@task.priority) %></label>
		</div>
	</div>
	<div>
		<div class="form-group row">
			<label class="col-sm-2 col-form-label">Deadline:</label>
			<div class="col-sm-3">
				<label for="start"></label>
				<label class="col-sm col-form-label"><%= @task.deadline %></label>
			</div>
		</div>
		<div>
			<div class="form-group row">
				<label class="col-sm-2 col-form-label">Done:</label>
				<div class="btn-group col-sm-3">
					<label class="col-sm-2 col-form-label"><%= done_check(@task.done) %></label>
				</div>
			</div>
		</div>

    	<br>
    	<br>

		<a href="<%= edit_task_path(@task) %>" type="button" class="btn btn-success">Edit</a>
		<button type="button" data-toggle="modal" data-target="#deleteModal" class="btn btn-danger">Delete</button>

		<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteCheckTitle" aria-hidden="true">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="deleteCheckTitle">ATTENTION</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">
						Are you sure you want to delete this task?
					</div>
					<div class="modal-footer">


						<a rel="nofollow" data-method="delete" href="<%= task_path(@task) %>" class="btn btn-success">Yes</a>
						<button type="button" class="btn btn-danger" data-dismiss="modal">No</button>

					</div>
				</div>
			</div>
		</div>
	</div>
</form>
