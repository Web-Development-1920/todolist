<%= form_with model: @task, local: true do |form| %>
	<% if @task.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
			<ul>
				<% @task.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="form-group row">
		<label class="col-sm-2 col-form-label">Name</label>
		<div class="col-sm-3">
			<input type="text" class="form-control" name="task[name]" value="<%= @task.name %>">
		</div>
	</div>
	<div class="form-group row">
		<label class="col-sm-2 col-form-label">Description</label>
		<div class="col-sm-9">
			<input type="text" class="form-control" name="task[description]" value="<%= @task.description %>">
		</div>
	</div>
	<div class="form-group row">
		<label class="col-sm-2 col-form-label">Priority</label>
		<select name="task[priority]" class="form-control">
			<option value="<%= @task.priority %>" selected="selected"><%= priority_select(@task.priority) %></option>
			<option value="1">High</option>
			<option value="2">Medium</option>
			<option value="3">Low</option>
		</select>
	</div>
	<div class="form-group row">
		<label class="col-sm-2 col-form-label">Deadline</label>
		<div class="col-sm-3">
			<label for="start"></label>
			<input type="date" id="start" name="task[deadline]" min="2020-01-01" max="2025-12-31" value="<%= parse_date(@task.deadline) %>">
		</div>
	</div>

	<br>
	<br>

	<%= form.submit :class => "btn btn-success"%>
<% end %>