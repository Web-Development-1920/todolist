<div class="title-box ">
	<div class="row vdivide justify-content-center align-items-center">
		<h1>To Do List App</h1>
	</div>
</div>

<br>
<br>

<div style="text-align: center;">
	<table class="table table-bordered table-striped grocery-crud-table table-hover">
		<thead>
			<tr>
				<th>Name</th>
				<th>Description</th>
				<th>Priority</th>
				<th>Deadline</th>
				<th>Done</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @tasks.each do |task| %>
				<tr>
					<td><%= task.name %></td>
					<td><%= task.description %></td>
					<td><%= priority_select(task.priority) %></td>
					<td><%= task.deadline %></td>
					<td><%= done_check(task.done) %></td>
					<td>
						<a href="<%= edit_task_path(task) %>" class="btn btn-info">Edit</a>
						<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal<%= task.id %>">Delete</button>
					</td>
				</tr>
				<div class="modal fade" id="deleteModal<%= task.id %>" tabindex="-1" role="dialog" aria-labelledby="deleteCheckTitle" aria-hidden="true">
					<div class="modal-dialog" role="document">
						<div class="modal-content">
							<div class="modal-header">
								<h5 class="modal-title" id="deleteCheckTitle">ATTENTION</h5>
								<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
								</button>
							</div>
							<div class="modal-body">
								Are you sure you want to delete this task?
							</div>
							<div class="modal-footer">
								<a rel="nofollow" data-method="delete" href="<%= task_path(task) %>" class="btn btn-success">Yes</a>
								<button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
							</div>
						</div>
					</div>
				</div>
			<% end %>
		</tbody>
	</table>
</div>

<br>
<br>

<a href="<%= new_task_path %>" class="btn btn-success"> New Task </a>
